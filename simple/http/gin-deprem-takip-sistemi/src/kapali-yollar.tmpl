  <script>


window.onload = async () => {
    let data;
    fetch("/api/roads").then(async(res)=>{
        data = await res.json();
        setTimeout(()=>{
            for(let i = 0;i < data.length;i++){
            if(data[i].Name != "" && data[i].Name != "YOLUN ADI"){
                document.getElementById("table-body").innerHTML += `
                <tr>
                    <td>${data[i].Name}</td>
                    <td>${data[i].Reason}</td>
                </tr>
                `;
            }
          }
        },1);
    })
}
